doctype html
html
  head
    title engagement
    style(type='text/css').
      body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
        font-size: 16px;
        line-height: 1.5;
        height: 100vh;
        width: 100vw;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      article {
        max-width: 600px
      }

      strong code {
        max-width: 100%;
        word-break: break-all;
      }

      .hidden {
        display: none;
      }

      #badges img {
        margin-right: 4px
      }

      blockquote {
        padding: 0 1em;
        margin: 10px 0;
        color: #6a737d;
        border-left: 0.25em solid #dfe2e5;
      }

    link(rel='stylesheet', type='text/css', href='https://github.com/sindresorhus/github-markdown-css/raw/gh-pages/github-markdown.css')
    link(rel='icon', href='https://github.com/samtgarson/engagement/raw/master/logo.png', type='image/x-icon')
  body
    article.markdown-body.entry-content(itemprop='text')
      p
        a(href='https://github.com/samtgarson/engagement', target='_blank')
          img(src='https://github.com/samtgarson/engagement/raw/master/logo.png', alt='engagement', style='max-width:100%;')
      block content
